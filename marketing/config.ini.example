# Database Configuration for Salary Report Generator
# Copy this file to config.ini and update with your database credentials

[database]
# PostgreSQL host (default: localhost)
host = localhost

# PostgreSQL port (default: 5432)
port = 5432

# Database name
database = acadexis_db

# Database user
user = postgres

# Database password
password = your_password_here

[report]
# Default output directory for reports
output_dir = reports

# Path to Acadexis logo (optional)
# logo_path = /path/to/acadexis_logo.png
